{
    "Controls":[
        {
            "var_name":"excel_file_path",
            "control_type":"Container",
            "settings":{
                "content":{
                    "control_type":"TextField",
                    "settings":{
                        "label":"Excel File Path",
                        "border_width":1.6,
                        "border_color":"grey900",
                        "border_radius":10,
                        "color":"grey900",
                        "height":36,
                        "content_padding":{
                            "control_type":"padding_only",
                            "settings":{
                                "left":10,
                                "right":10,
                                "top":0,
                                "bottom":0
                            }
                        }
                    }
                },
                "margin":{
                    "control_type":"margin_only",
                    "settings":{
                        "left":8,
                        "right":8,
                        "top":0,
                        "bottom":0
                    }
                },
                "bgcolor":"transparent",
                "alignment":{"control_type":"align_center"},
                "expand":true,
                "border_radius":8,
                "height":50
            }
        },
        {
            "var_name":"docx_file_path",
            "control_type":"Container",
            "settings":{
                "content":{
                    "control_type":"TextField",
                    "settings":{
                        "label":"Word File Path",
                        "border_width":1.6,
                        "border_color":"grey900",
                        "border_radius":10,
                        "color":"grey900",
                        "height":36,
                        "content_padding":{
                            "control_type":"padding_only",
                            "settings":{
                                "left":10,
                                "right":10,
                                "top":0,
                                "bottom":0
                            }
                        }
                    }
                },
                "margin":{
                    "control_type":"margin_only",
                    "settings":{
                        "left":8,
                        "right":8,
                        "top":0,
                        "bottom":0
                    }
                },
                "bgcolor":"transparent",
                "alignment":{"control_type":"align_center"},
                "expand":true,
                "border_radius":8,
                "height":50
            }
        },
        {
            "var_name":"select_sheet_btn",
            "control_type":"Container",
            "settings":{
                "content":{
                    "control_type":"ElevatedButton",
                    "settings":{
                        "text":"Select Sheet",
                        "style":{"ref":"submit_btn_style"},
                        "height":36,
                        "width":130,
                        "on_click":{"func":"get_to_excel_view"}
                    }
                },
                "alignment":{"control_type":"align_center"}
            }
        },
        {
            "var_name":"load_book_btn",
            "control_type":"Container",
            "settings":{
                "content":{
                    "control_type":"ElevatedButton",
                    "settings":{
                        "text":"Open File",
                        "style":{"ref":"submit_btn_style"},
                        "height":36,
                        "width":130,
                        "on_click":{"func":"get_excel_path"}
                    }
                },
                "alignment":{"control_type":"align_center"}
            }
        },
        {
            "var_name":"excel_file_selector",
            "control_type":"Container",
            "settings":{
                "content":{
                    "control_type":"Row",
                    "settings":{
                        "controls":[
                            {"ref":"excel_file_path"},
                            {"ref":"select_sheet_btn"},
                            {"ref":"load_book_btn"}
                        ],
                        "alignment":"center"
                    }
                },
                "padding":{
                    "control_type":"padding_symmetric",
                    "settings":{
                        "horizontal":10
                    }
                },
                "alignment":{"control_type":"align_center"},
                "bgcolor":"bluegrey50",
                "border_radius":10,
                "height":50
            }
        },
        {
            "var_name":"docx_file_selector",
            "control_type":"Container",
            "settings":{
                "content":{
                    "control_type":"Row",
                    "settings":{
                        "controls":[
                            {"ref":"docx_file_path"},
                            {
                                "control_type":"ElevatedButton",
                                "settings":{
                                    "text":"Open File",
                                    "style":{"ref":"submit_btn_style"},
                                    "width":270,
                                    "on_click":{"func":"get_docx_path"}
                                }
                            }
                        ],
                        "alignment":"center"
                    }
                },
                "padding":{
                    "control_type":"padding_symmetric",
                    "settings":{
                        "horizontal":10
                    }
                },
                "alignment":{"control_type":"align_center"},
                "bgcolor":"bluegrey50",
                "border_radius":10,
                "height":50
            }
        },
        {
            "var_name":"file_selection_container",
            "control_type":"Card",
            "settings":{
                "content":{
                    "control_type":"Container",
                    "settings":{
                        "content":{
                            "control_type":"Column",
                            "settings":{
                                "controls":[
                                    {"ref":"excel_file_selector"},
                                    {"ref":"docx_file_selector"}
                                ],
                                "horizontal_alignment":"center",
                                "alignment":"center",
                                "spacing":5
                            }
                        },
                        "expand":true,
                        "padding":{"ref":"padding_constant_2"}
                    }
                },
                "color":"grey100",
                "surface_tint_color":"grey100",
                "height":140
            }
        }
    ]
}