{
    "Imports":[],
    
    "Controls":[
        {
            "var_name":"opacity_color",
            "control_type":"color.with_opacity",
            "settings":{
                "opacity":0.2,
                "color":"onsurface"
            }
        },
        {
            "var_name":"text_settings",
            "control_type":"ref",
            "settings":{
                "size":16,
                "weight":"bold",
                "color":{"ref":"opacity_color"}
            }
        },
        {
            "var_name":"my_padding",
            "control_type":"padding.symmetric",
            "settings":{
                "horizontal":16,
                "vertical":2
            }
        },
        {
            "var_name":"my_margin",
            "control_type":"margin.symmetric",
            "settings":{
                "horizontal":10,
                "vertical":0
            }
        },
        {
            "var_name":"line1",
            "control_type":"LineChartData",
            "settings":{
                "data_points":{
                    "control_type":"loop",
                    "depth":1,
                    "iterator":[[0,3],[2.6, 2],[4.9, 5],[6.8, 3.1],[8, 4],[9.5, 3],[11, 4]],
                    "control":{
                        "control_type":"LineChartDataPoint",
                        "settings":{
                            "x":{"control_type":"loop_index", "idx":[0,0]},
                            "y":{"control_type":"loop_index", "idx":[0,1]}
                        }
                    }
                },
                "stroke_width":5,
                "color":"cyan",
                "curved":true,
                "stroke_cap_round":true
            }
        },
        {
            "var_name":"chart1",
            "control_type":"LineChart",
            "settings":{
                "data_series":[
                    {"ref":"line1"}
                ],
                "border":{
                    "control_type":"border.all",
                    "settings":{
                        "width":3,
                        "color":{"ref":"opacity_color"}
                    }
                },
                "horizontal_grid_lines":{
                    "control_type":"ChartGridLines",
                    "settings":{
                        "interval":1,
                        "color":{"ref":"opacity_color"}
                    }
                },
                "vertical_grid_lines":{
                    "control_type":"ChartGridLines",
                    "settings":{
                        "interval":1,
                        "color":{"ref":"opacity_color"}
                    }
                },
                "left_axis":{
                    "control_type":"ChartAxis",
                    "settings":{
                        "labels":[
                            {
                                "control_type":"ChartAxisLabel",
                                "settings":{
                                    "value":1,
                                    "label":{
                                        "control_type":"Text",
                                        "settings":{
                                            "value":"10k",
                                            "size":14,
                                            "weight":"bold"
                                        }
                                    }
                                }
                            }
                        ],
                        "labels_size":40
                    }
                },
                "bottom_axis":{
                    "control_type":"ChartAxis",
                    "settings":{
                        "labels":{
                            "control_type":"loop",
                            "depth":1,
                            "iterator":{"ref":"months_values"},
                            "control":{
                                "control_type":"ChartAxisLabel",
                                "settings":{
                                    "value":{"control_type":"loop_index", "idx":[0,1]},
                                    "label":{
                                        "call":"make_label", 
                                        "settings":{
                                            "text":{"control_type":"loop_index", "idx":[0,0]}
                                        }
                                    }
                                }
                            }
                        },
                        "labels_size":32
                    }
                },
                "tooltip_bgcolor":{
                    "control_type":"color.with_opacity",
                    "settings":{
                        "opacity":0.8,
                        "color":"blue_grey"
                    }
                },
                "min_y":0,
                "max_y":6,
                "min_x":0,
                "max_x":11,
                "expand":true
            }
        },
        {
            "var_name":"chart_view1",
            "control_type":"Container",
            "settings":{
                "content":{
                    "control_type":"Row",
                    "settings":{
                        "controls":[
                            {"ref":"chart1"}
                        ],
                        "vertical_alignment":"center"
                    }
                },
                "padding":{
                    "control_type":"padding.symmetric",
                    "settings":{
                        "horizontal":16,
                        "vertical":8
                    }
                },
                "expand":1,
                "bgcolor":"grey100",
                "border_radius":10
            }
        }
    ],

    "UI":[
        {
            "route":"/",
            "settings":{
                "controls":[
                    {"ref":"chart_view1"}
                ]
            }
        },
        {
            "route":"/next",
            "settings":{
                "controls":[
                    {
                        "control_type":"Column",
                        "settings":{
                            "controls":[
                                {
                                    "control_type":"Container",
                                    "settings":{
                                        "content":{
                                            "control_type":"Row",
                                            "settings":{
                                                "controls":[
                                                    {"ref":"chart1"}
                                                ],
                                                "vertical_alignment":"center",
                                                "height":36
                                            }
                                        },
                                        "alignment":"center",
                                        "expand":1,
                                        "padding":{"ref":"my_padding"},
                                        "bgcolor":"grey100",
                                        "margin":{"ref":"my_margin"},
                                        "border_radius":10
                                    }
                                }
                            ],
                            "spacing":0
                        }
                    }
                ]
            }
        }
    ]
}