{
    "Controls":[
        {
            "var_name":"submit",
            "control_type":"CustomButton",
            "settings":{
                "text":"Submit",
                "on_click":{"func":"submit_row"},
                "width":120,
                "bgcolor":"green700",
                "text_color":"white",
                "shape":{
                    "control_type":"ContinuousRectangleBorder",
                    "settings":{
                        "radius":12
                    }
                },
                "height":30
            }
        },
        {
            "var_name":"submit_container",
            "control_type":"Container",
            "settings":{
                "content":{
                    "control_type":"Row",
                    "settings":{
                        "controls":[
                            {"ref":"submit"}
                        ],
                        "alignment":"end",
                        "height":36,
                        "vertical_alignment":"center"
                    }
                },
                "padding":{
                    "control_type":"padding.symmetric",
                    "settings":{
                        "horizontal":16,
                        "vertical":2
                    }
                },
                "height":50,
                "expand":true,
                "expand_loose":true,
                "bgcolor":"grey100",
                "margin":{"ref":"my_margin"},
                "border_radius":10
            }
        }
    ]
}